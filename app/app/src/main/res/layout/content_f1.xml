<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#00000000"
    android:layout_below="@+id/layout_header"
    android:layout_marginTop="-20dp"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    android:id="@+id/content_f1"
    >

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/main_bg1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="230dp"
        android:layout_marginBottom="10dp"
        android:layout_width="400dp"
        android:layout_height="530dp">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="消息通知"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </LinearLayout>
        </LinearLayout>
    
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:background="#1951A6"
            android:layout_width="340dp"
            android:layout_height="210dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:background="@drawable/list_header"
                android:layout_width="wrap_content"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/news"
                    android:layout_marginTop="3dp"
                    android:text="新闻"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/list_item">

                </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@drawable/list_bottom"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:background="#1951A6"
            android:layout_width="340dp"
            android:layout_height="210dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:background="@drawable/list_header"
                android:layout_width="wrap_content"
                android:layout_height="30dp">
                <TextView
                    android:id="@+id/message"
                    android:layout_marginTop="3dp"
                    android:text="通知"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/list_item_two">

                </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@drawable/list_bottom"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>






    <LinearLayout
        android:background="@drawable/main_bg2"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:layout_width="500dp"
        android:layout_height="530dp">
        <TextView
            android:layout_marginTop="10dp"
            android:text="班级视频"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_view"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="50dp"
            android:layout_width="400dp"
            android:layout_height="400dp" />
    </LinearLayout>







    <LinearLayout
        android:background="@drawable/main_bg1"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="230dp"
        android:layout_marginBottom="30dp"
        android:layout_width="400dp"
        android:layout_height="530dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="上课教师信息"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"></LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:background="#1951A6"
            android:layout_marginLeft="30dp"
            android:layout_width="340dp"
            android:layout_height="440dp">
            <LinearLayout
                android:background="@drawable/list_header"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/details"
                    android:layout_marginTop="3dp"
                    android:text="详情"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/list_item_three"
                    >

                </ListView>

            </LinearLayout>



            <LinearLayout
                android:background="@drawable/list_bottom"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
